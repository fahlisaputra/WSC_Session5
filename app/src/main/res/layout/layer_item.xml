<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingStart="32dp" android:clickable="false">

    <LinearLayout
        android:id="@+id/rockLayer"
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:background="#F7E7CE"
        android:gravity="center">

        <TextView
            android:id="@+id/txtRockType"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/border"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Mudstone"
            android:textStyle="bold"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtLayerDepth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0m"
        android:layout_toEndOf="@id/rockLayer"
        android:layout_marginStart="12dp" />


</RelativeLayout>